@model femotor.Models.Motor

@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>EKLE</h1>

<h4>Motor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form  asp-action="Ekle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MotorModel" class="control-label"></label>
                <input asp-for="MotorModel" class="form-control" />
                <span asp-validation-for="MotorModel" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="ModelYear" class="control-label"></label>
                <input asp-for="ModelYear" class="form-control" />
                <span asp-validation-for="ModelYear" class="text-danger"></span>
            </div>
            <select name="BodyTypeID">
                <option value="1">SuperSport</option>
                <option value="2">Naked</option>
                <option value="3">Scooter</option>
                <option value="4">Turing</option>
                <span asp-validation-for="BodyTypeID" class="text-danger"></span>
            </select>
              <div class="form-group">              
                <label asp-for="BodyType" class="control-label"></label>
                <input asp-for="BodyType" class="form-control" />
                <span asp-validation-for="BodyType" class="text-danger"></span>
            </div> 
           
             <div class="form-group">
                <label asp-for="GearType" class="control-label"></label>
                <input asp-for="GearType" class="form-control" />
                <span asp-validation-for="GearType" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="EngineVolume" class="control-label"></label>
                <input asp-for="EngineVolume" class="form-control" />
                <span asp-validation-for="EngineVolume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Liste">Listeye Geri Dön</a>
</div>

